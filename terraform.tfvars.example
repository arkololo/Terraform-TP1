-----END OPENSSH PRIVATE KEY-----
EOF

# ============================================================================
# Configuration GitHub & Ansible
# ============================================================================
# URL du dépôt GitHub contenant playbooks et inventory Ansible
# Doit contenir : playbook.yml et inventory.ini dans la racine
github_repo_url = "https://github.com/arkololo/ansible-wordpress.git"
github_repo_branch = "main"

# ============================================================================
# Sécurité & Protection
# ============================================================================
# Protection contre suppression accidentelle (true/false)
# true  = terraform destroy échouera (protection production)
# false = terraform destroy fonctionnera (mode développement)
security_protection_delete = false

# Autoriser la destruction manuelle des VMs via terraform
allow_manual_destroy = true

# ============================================================================
# INSTRUCTIONS POUR GENERER VOS CLÉS SSH
# ============================================================================
# 
# 1. Ouvrir un terminal (PowerShell, Bash, etc.)
#
# 2. Générer une paire de clés ED25519 :
#    ssh-keygen -t ed25519 -f ~/.ssh/id_ed25519 -N "" -C "ansible@deployment"
#
# 3. Afficher la clé PUBLIQUE (à mettre dans ansible_ssh_public_key) :
#    cat ~/.ssh/id_ed25519.pub
#    Exemple : ssh-ed25519 AAAAC3Nza... user@host
#
# 4. Afficher la clé PRIVÉE (à mettre dans ansible_ssh_private_key) :
#    cat ~/.ssh/id_ed25519
#    Copier le contenu entier (BEGIN à END)
#
# 5. Remplacer les valeurs dans ce fichier
#
# ============================================================================
