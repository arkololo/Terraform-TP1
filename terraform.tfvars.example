## Example: Provide your SSH keypair used between Ansible and WEB
# Replace with your actual keys. Keep PEM format for private key.

ansible_ssh_private_key = <<EOF
-----BEGIN RSA PRIVATE KEY-----
...your private key PEM...
-----END RSA PRIVATE KEY-----
EOF

ansible_ssh_public_key  = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAA... your_comment"

# --- Project & Storage ---
project      = "default"
storage_pool = "default"

# --- Front VM (Alpine) ---
# Fixed: 512MB RAM, 16GB disk
# Variable: CPU cores
front_cpu = 1

# --- Back VM (Ubuntu Cloud) ---
# Fixed: 32GB disk
# Variable: CPU cores and RAM
back_cpu    = 1
back_memory = "1GB"


