# ============================================================================
# EXEMPLE DE CONFIGURATION - terraform.tfvars.example
# 
# Copier ce fichier en terraform.tfvars et ajuster selon vos besoins
# cp terraform.tfvars.example terraform.tfvars
# ============================================================================

# ============================================================================
# Configuration Infrastructure de base
# ============================================================================
project        = "HingeEnjoyer4Living2BetterYourself"
storage_pool   = "local"
remote         = "iaas"
network_name   = "Main"
network_subnet = "10.0.100.0/24"

# ============================================================================
# Configuration VM Ansible
# ============================================================================
ansible_vm_name = "Ansible"
ansible_os_image = "images:ubuntu/24.04/cloud"
ansible_cpu = 1
ansible_memory = "1GB"
ansible_disk = "16GB"
ansible_ip = "10.0.100.10"

# ============================================================================
# Configuration VM Web
# ============================================================================
web_vm_name = "Web"
web_os_image = "images:debian/12/cloud"
web_cpu = 1
web_memory = "2GB"
web_disk = "32GB"
web_ip = "10.0.100.20"

# ============================================================================
# SSH & Clés Ansible
# ============================================================================
# Remplacer par votre clé SSH publique (format OpenSSH)
# Générer : ssh-keygen -t ed25519 -f ~/.ssh/id_ed25519 -N ""
ansible_ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGKONDBN/SoaXgJNFiEzqafh+ImYB7/rpE+yPL6NpF3i user@host"

# Remplacer par votre clé SSH privée (format PEM)
# Contenu de ~/.ssh/id_ed25519
